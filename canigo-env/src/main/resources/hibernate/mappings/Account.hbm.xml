<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="net.gencat.ctti.canigo.samples.prototip.model">
	<class
		name="Account"
		table="ACCOUNT"
	>
		<id
			name="id"
			type="string"
			column="USERID"
		>
			<generator class="assigned"/>
		</id>

		<property
			name="email"
			column="EMAIL"
			type="string"
			not-null="true"
			length="80"
		/>
		<property
			name="firstname"
			column="FIRSTNAME"
			type="string"
			not-null="true"
			length="80"
		/>
		<property
			name="lastname"
			column="LASTNAME"
			type="string"
			not-null="true"
			length="80"
		/>
		<property
			name="status"
			column="STATUS"
			type="string"
			not-null="false"
			length="2"
		/>
		<property
			name="addr1"
			column="ADDR1"
			type="string"
			not-null="false"
			length="80"
		/>
		<property
			name="addr2"
			column="ADDR2"
			type="string"
			not-null="false"
			length="40"
		/>
		<property
			name="city"
			column="CITY"
			type="string"
			not-null="false"
			length="80"
		/>
		<property
			name="state"
			column="STATE"
			type="string"
			not-null="false"
			length="80"
		/>
		<property
			name="zip"
			column="ZIP"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="country"
			column="COUNTRY"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="phone"
			column="PHONE"
			type="string"
			not-null="false"
			length="80"
		/>
		<property
			name="birthdate"
			column="BIRTHDATE"
			type="date"
			not-null="false"
			length="7"
		/>
		<property
			name="comments"
			column="COMMENTS"
			type="string"
			not-null="false"
			length="255"
		/>
		<property
			name="lower18"
			column="IS_LOWER18"
			type="true_false"
			not-null="false"
			length="1"
		/>
		<property
			name="password"
			column="PASSWORD"
			type="string"
			not-null="false"
			length="80"
		/>
		<many-to-one
			name="preferredProduct"
			column="PREFERRED_PRODUCT"
			class="Product"
			not-null="false"
		>
		</many-to-one>
		<many-to-one
			name="preferredCategory"
			column="PREFERRED_CATEGORY"
			class="Category"
			not-null="false"
		>
		</many-to-one>


	</class>	
</hibernate-mapping>